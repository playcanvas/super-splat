{
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "es6",
        "lib": ["es2019", "dom"],
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "inlineSources": true,
        "module": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "playcanvas": ["./submodules/engine/build/playcanvas.mjs"],
            "playcanvas-extras": ["./submodules/engine/build/playcanvas-extras.mjs"],
            "pcui": ["node_modules/@playcanvas/pcui"]
        }
    },
    "include": ["./src/*.ts","./submodules/engine/extras/*/*.ts", "src/ui/control-panel.ts"],
    "exclude": ["node_modules", "**/*.js", "dist"]
}
